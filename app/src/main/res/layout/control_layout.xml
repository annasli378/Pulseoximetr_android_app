<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEFF5">


    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:text="Place your finger on the sensor and tap START NOW" />

        <Button
            android:id="@+id/buttonControlStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="205dp"
            android:background="@color/colorPrimaryDark"
            android:text="  START NOW  "
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:layout_gravity="center"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
            android:layout_width="93dp"
            android:layout_height="104dp"
            android:layout_gravity="center"
            android:layout_marginBottom="150dp"
            android:progress="@android:integer/config_shortAnimTime"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewPulse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="70dp"
            android:text="Pulse Value:"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewSaturation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:text="SpO2 Value:"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewBPM"
            android:layout_width="166dp"
            android:layout_height="101dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text=""
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textViewSpO2"
            android:layout_width="167dp"
            android:layout_height="103dp"
            android:layout_gravity="center"
            android:layout_marginTop="170dp"
            android:text=""
            android:textSize="30dp" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>