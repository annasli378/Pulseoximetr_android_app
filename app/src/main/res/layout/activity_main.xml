<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEFF5">


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:background="#FFEFF5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:text="Plug in device and tap START" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Check your pulse and saturation level"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="22dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:gravity="center_horizontal" />


        <ImageButton
            android:id="@+id/buttonStart"
            android:layout_width="268dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginBottom="80dp"
            android:background="@color/colorPrimaryDark"
            app:srcCompat="@drawable/heart3" />

        <ImageButton
            android:id="@+id/buttonStatistic"
            android:layout_width="269dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:background="@color/colorPrimaryDark"
            app:srcCompat="@drawable/statisctic" />

        <ImageButton
            android:id="@+id/buttonSettings"
            android:layout_width="269dp"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark"
            app:srcCompat="@drawable/settings2" />

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

